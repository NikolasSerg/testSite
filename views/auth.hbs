<div id="authBar">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <ul class="tabs">
                    <li class="tab col s6"><a href="#login">ВХІД</a></li>
                    <li class="tab col s6"><a class="active" href="#register">РЕЄСТРАЦІЯ</a></li>
                </ul>
            </div>
                <div id="login" class="col s6 offset-s3">
                    <form action="#" method="POST">
                        <div class="input-field">
                            <input id="email" type="email" name="email" class="validate" required>
                            <label for="email">E-MAIL</label>
                            <span class="helper-text" data-error="Ваш логін"></span>
                        </div>
                        <div class="input-field">
                            <input id="password" type="text" name="password" class="validate" required>
                            <label for="password">ПАРОЛЬ</label>
                            <span class="helper-text" data-error="Ваш пароль"></span>
                        </div>
                        
                        <button class="btn btn-primary" type="submit">ВХІД</button>
                    </form>
                </div>
                <div id="register" class="col s6 offset-s3">
                    <form action="#" method="POST">
                        <div class="input-field">
                            <input id="remail" type="email" name="email" class="validate" required>
                            <label for="remail">E-MAIL</label>
                            <span class="helper-text" data-error="Ваш e-mail"></span>
                        </div>
                        <div class="input-field">
                            <input id="rpassword" type="password" name="password" class="validate" required>
                            <label for="rpassword">ПАРОЛЬ</label>
                            <span class="helper-text" data-error="Ваш пароль"></span>
                        </div>
                        <div class="input-field">
                            <input id="confirm" type="password" name="confirm" class="validate" required>
                            <label for="confirm">ПАРОЛЬ ще раз</label>
                            <span class="helper-text" data-error="Ваш пароль"></span>
                        </div>
                        
                        <button class="btn btn-primary" type="submit">РЕЄСТРАЦІЯ</button>
                    </form>
                </div>
        </div>
    </div>
</div>